@using Hybrid_SaaS
@{
    Layout = "/Layouts/_SiteLayout.cshtml";

}

        <!-- start slider -->
		<section id="slider-part">
			
            <!-- start slider bar -->
            <article class="slider-bar adding">
            	<div class="flexslider">
                
                    <ul class="">
                    	<li><img src="images/support_bg.jpg" alt="" /></li>
                    </ul>
                
                	<aside class="text space">
                    	<div class="centering">
                        	<h2>Wij staan voor je klaar</h2>
                            <p>Heb je een vraag of kom je ergens niet uit? Wij helpen je graag verder</p>
						</div>                            
                        <a target="_blank" href="@LinkList.GetLink(Link.MeestGesteldeVragen)" class="software">Meest gestelde vragen</a>
                    </aside>
                    
            	</div>
            </article>
            <!-- end slider bar -->

		</section>
		<!-- end slider -->


		
		<!-- start content -->
		<section id="content-part">

			<!-- start centerpart -->
			<section id="center-part">

				<!-- start about bar -->
				<article class="about-bar">
				<div class="centering">
                
					<h3>Met Hybrid SaaS heb je alles wat je nodig hebt om alle bedrijfsprocessen slim te organiseren. </h3>
                    
                    <aside class="left">
                    	<p>Van relatiebeheer, ticketsysteem tot het beheer van de voorraad en de facturatie. Je kiest zelf het pakket dat aansluit op jouw wensen, en voegt eventueel naar wens specifieke modules toe. </p>
                    </aside>
                    
                    <aside class="right">
                    	<p>Wij geloven dat onze klanten het systeem waarderen en werken daarom met een contract dat maandelijks opzegbaar is. Vanuit één centraal dashboard houd je makkelijk het overzicht.</p>
                    </aside>
                    
                    <div class="clear"></div>
                    <!-- start support bar -->
                    <article class="support-bar" id="support">

                        <div class="centering">
                            <div class="supportive">

                                <h2>onze support<span></span></h2>
                                <h1 style="color:orange; margin-left:200px; width: 750px;">@LinkList.GetTitle(Link.InvoerTicket)</h1>
                                <aside class="support">
                                    <div class="left">
                                        <ul>
                                            <li>
                                                <div class="image"><img src="@LinkList.GetImage(Link.Download)" title="@LinkList.GetLinkName(Link.Download)" /></div>
                                                <div class="text">
                                                    <h3>@LinkList.GetLinkName(Link.Download)</h3>
                                                    <p>
                                                        <a href="@LinkList.GetLink(Link.BrowserDownload)">@LinkList.GetLinkName(Link.BrowserDownload)</a><br />
                                                        <a href="@LinkList.GetLink(Link.WordAddDownload)">@LinkList.GetLinkName(Link.WordAddDownload)</a><br />
                                                        <a href="@LinkList.GetLink(Link.OutlookAddDownload)">@LinkList.GetLinkName(Link.OutlookAddDownload)</a><br />
                                                        <a target="_blank" href="@LinkList.GetLink(Link.DataAdapter)">@LinkList.GetLinkName(Link.DataAdapter)</a><br />
                                                        <a target="_blank" href="@LinkList.GetLink(Link.FotoAdapter)">@LinkList.GetLinkName(Link.FotoAdapter)</a><br />
                                                    </p>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="image"><img src="@LinkList.GetImage(Link.Handleiding)" title="@LinkList.GetLinkName(Link.Handleiding)" /></div>
                                                <div class="text">
                                                    <a target="_blank" href="@LinkList.GetLink(Link.Handleiding)"><h3>@LinkList.GetLinkName(Link.Handleiding)</h3></a>
                                                    <p>@LinkList.GetDescription(Link.Handleiding)</p>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="image"><img src="@LinkList.GetImage(Link.KijkMetMijMee)" title="@LinkList.GetLinkName(Link.KijkMetMijMee)" /></div>
                                                <div class="text">
                                                    <a href="@LinkList.GetLink(Link.KijkMetMijMee)"><h3>@LinkList.GetLinkName(Link.KijkMetMijMee)</h3></a>
                                                    <p>@LinkList.GetDescription(Link.KijkMetMijMee)</p>
                                                </div>
                                            </li>

                                        </ul>
                                    </div>
                                    <div class="right">
                                        <ul>
                                            <li>
                                                <div class="image"><img src="@LinkList.GetImage(Link.InvoerTicket)" title="@LinkList.GetLinkName(Link.InvoerTicket)" /></div>
                                                <div class="text">
                                                    <a target="_blank" href="@LinkList.GetLink(Link.InvoerTicket)"><h3>@LinkList.GetLinkName(Link.InvoerTicket)</h3></a>
                                                    <p>@LinkList.GetDescription(Link.InvoerTicket)</p>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="image"><img src="@LinkList.GetImage(Link.HelpDesk)" title="@LinkList.GetLinkName(Link.HelpDesk)" /></div>
                                                <div class="text">
                                                    <a href="@LinkList.GetLink(Link.MenuContact)"><h3>@LinkList.GetLinkName(Link.HelpDesk)</h3></a>
                                                    <p>@LinkList.GetDescription(Link.HelpDesk)</p>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="image"><img src="@LinkList.GetImage(Link.Consultancy)" title="@LinkList.GetLinkName(Link.Consultancy)" /></div>
                                                <div class="text">
                                                    <h3>@LinkList.GetLinkName(Link.Consultancy)</h3>
                                                    <p>@LinkList.GetDescription(Link.Consultancy)</p>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </aside>
                                <span class="border"></span>
                            </div>
                        </div>
                    </article>
                    <!-- end support bar -->
                </div>    
                <img src="images/about_img.jpg" alt="" class="ab_img" />
				</article>
				<!-- end about bar -->
                


				
			</section>
			<!-- end center part -->
			
		</section>
		<!-- end content -->
