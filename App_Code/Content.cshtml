@using Hybrid_SaaS
@helper ContactFormDemo()
{
    <div class="centering">
        <div class="merge">
            <div class="module">
                <h4 style="margin-top: 35px;">
                    Nieuwsgierig geworden wat wij nog meer voor jou kunnen betekenen?<br>
                    Vraag onze vrijblijvende Live Demo aan!
                </h4>
                <div class="image">
                    <img src="/images/connecting_img.JPG" alt="" style="width: 760px; margin-top: 35px" />
                </div>
            </div>
            <div class="form">
                <h4>Interesse in deze module of een opmerking? Stuur ons een bericht.</h4>
                <form action="#">
                    <input type="text" value="Naam" onFocus="if(this.value=='Naam')this.value='';" onBlur="if(this.value=='')this.value='Naam';" />
                    <input type="text" value="E-mail" onFocus="if(this.value=='E-mail')this.value='';" onBlur="if(this.value=='')this.value='E-mail';" />
                    <textarea cols="15" rows="5" onFocus="if(this.value=='Bericht')this.value='';" onBlur="if(this.value=='')this.value='Bericht';">Bericht</textarea>
                    <input type="submit" value="Verstuur" />
                </form>
            </div>
        </div>
    </div>
}
@helper ContactForm(bool showContactPageLink = true)
{
    <!-- start form bar -->
    <article class="form-bar" id="contact">

        <div class="centering">
            <div class="form">
                 
                <h2>
                    Heeft u vragen?
                    <span>neem dan contact met ons op.</span>
                </h2>
                <aside class="forminner">
                    <div class="left">
                        <form method="post">
                            <input type="text" value="Naam" onFocus="if (this.value == 'Naam')this.value = '';" onBlur="if (this.value == '')this.value = 'Naam';" name="Name"/>
                            <input type="text" value="E-mail" onFocus="if (this.value == 'E-mail')this.value = '';" onBlur="if (this.value == '')this.value = 'E-mail';" name="email"/>
                            <textarea name="Bericht" cols="15" rows="5" onFocus="if (this.value == 'Bericht')this.value = '';" onBlur="if (this.value == '')this.value = 'Bericht';">Bericht</textarea>
                            <input type="submit" value="VERSTUUR"/>
                        </form>
                    </div>
                    <div class="right">
                        <address>Hybrid SaaS | Online Business Software <a href="mailto:support@hybridsaas.com">support@hybridsaas.com</a></address>
                        <p>
                            <b>Wij zijn telefonisch bereikbaar van:</b><br>
                            Maandag t/m vrijdag 09.00 uur - 17.00 uur<br>
                            op: +31 (0)85 -002 1940
                        </p>
                        <p><b>Correspondentieadres:</b><br/>Postbus 31 2870 AA Schoonhoven
                        </p>
                        <p><b>Kamer van Koophandel:</b><br/>Hybrid SaaS ICT B.V. K.v.K. Rotterdam 54529239
                        </p>
                        <div class="social">
                            <div class="semi">
                                <p>Heeft u vragen over de werking van onze <br/> software, dan kunt u uiteraard contact opnemen met de medewerkers van onze helpdesk <br>middels het <a href="@LinkList.GetLink( Link.InvoerTicket )">online ticketsysteem</a>
                                </p>
                            </div>
                            <ul>
                                <li><a href="@LinkList.GetLink( Link.Facebook )" target="_blank"><img src="/images/social_icon1.png" alt=""/></a></li>
                                <li><a href="@LinkList.GetLink( Link.Twitter )" target="_blank"><img src="/images/social_icon2.png" alt=""/></a></li>
                                <li><a href="@LinkList.GetLink( Link.GooglePlus )" target="_blank"><img src="/images/social_icon3.png" alt=""/></a></li>
                            </ul>
                        </div>
                    </div>
                </aside>
                @if (showContactPageLink)
                {
                    <a href="@LinkList.GetLink( Link.MenuContact )" class="moreinfo">NAAR DE CONTACTPAGINA</a>
                }
            </div>
        </div>
    </article>
        <!-- end form bar -->
}


